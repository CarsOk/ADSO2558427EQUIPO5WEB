<h2 class="titulo">Reenviar instrucciones de confirmación</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>

  <div class="form-inputs">
    <label for="user_email">Correo electronico:</label>
    <%= f.text_field :email, required: true, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), autocomplete: "email" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Reenviar instrucciones de confirmación" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
