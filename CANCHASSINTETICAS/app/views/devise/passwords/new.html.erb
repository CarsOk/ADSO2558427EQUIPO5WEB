<h2 class= "titulo">¿Olvidaste tu contraseña?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <div class="form-inputs">
    <label for="user_email">Correo electronico:</label>
    <%= f.text_field :email, required: true, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-actions">
    <%= f.submit "Envíame instrucciones para restablecer la contraseña" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
