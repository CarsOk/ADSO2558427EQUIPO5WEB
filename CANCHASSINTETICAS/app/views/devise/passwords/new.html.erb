<main class="bg-gra-01">
  <div class="form-container">
    <div class="logo-container">
      <%= image_tag "Logo-CS.png", class: "logo"%>
    </div>
    <h2 class= "titulo">¿Olvidaste tu contraseña?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="form-inputs">
        <label for="user_email">Correo electronico:</label>
        <%= f.text_field :email, required: true, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Instrucciones para restablecer contraseña" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <a class="custom-link" href="<%= root_path %>"><i class="fa fa-reply-all"></i>Volver al inicio</a>
</main>

