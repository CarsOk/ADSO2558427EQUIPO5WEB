<main class="bg-gra-01">
  <div class="form-container">
    <div class="logo-container">
      <%= image_tag "Logo-CS.png", class: "logo"%>
    </div>
    <h2>Editar <%= resource_name.to_s.humanize %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <div class="form-inputs">
        <label for="user_email">Correo electronico:</label>
        <%= f.text_field :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <label for="user_password">Nueva contraseña:</label>
        <%= f.password_field :password, required: false, autocomplete: "new-password" %>
        <p>Leave it blank if you don't want to change it</p>

        <label for="user_password_confirmation">Confirmar contreseña:</label>
        <%= f.password_field :password_confirmation, required: false, autocomplete: "new-password" %>

        <label for="user_current_password">Contraseña actual:</label>
        <%= f.password_field :current_password, required: true, autocomplete: "current-password" %>
        <p>We need your current password to confirm your changes</p>
      </div>

      <div class="form-actions">
        <%= f.submit "Update" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

    <%= link_to "Salir", :back %>
  </div>
  <a class="custom-link" href="<%= root_path %>"><i class="fa fa-reply-all"></i>Volver al inicio</a>
</main>