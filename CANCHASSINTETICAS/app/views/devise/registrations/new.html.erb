<main class="bg-gra-01">
  <div class="form-container">
    <div class="logo-container">
      <%= image_tag "Logo-CS.png", class: "logo"%>
    </div>
    <h2>Registrarse</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <div class="nested-fields">
          <%= f.fields_for :cliente, @cliente do |cliente_fields| %>
            <%= cliente_fields.label :identificacion, "Identificación:" %>
            <%= cliente_fields.text_field :identificacion, oninput: "this.value = this.value.replace(/[^0-9]/, '')", pattern: "[0-9]*" %>

            <%= cliente_fields.label :nombre, "Nombre:" %>
            <%= cliente_fields.text_field :nombre %>

            <%= cliente_fields.label :apellido, "Apellido:" %>
            <%= cliente_fields.text_field :apellido %>
          <% end %>
        </div>

        <label for="user_email">Correo electronico:</label>
        <%= f.text_field :email, required: true, autofocus: true, autocomplete: "email" %>

        <label for="user_password">Contraseña:</label>
        <%= f.password_field :password, required: true, autocomplete: "new-password" %>

        <label for="user_password_confirmation">Confirmar contraseña:</label>
        <%= f.password_field :password_confirmation, required: true, autocomplete: "new-password" %>
      </div>
      <div class="form-actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
  <a class="custom-link" href="<%= root_path %>"><i class="fa fa-reply-all"></i>Volver al inicio</a>
</main>






