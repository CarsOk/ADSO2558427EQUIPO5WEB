<tr>
    <th scope="row"><%= reserva.id %></th>
    <td><%= reserva.cliente.identificacion%></td>
    <td><%= reserva.cancha.nombre%></td>
    <td><%= reserva.fecha%></td>
    <td><%= reserva.hora_inicio.strftime("%I:%M %p") %></td>
    <td><%= reserva.hora_fin.strftime("%I:%M %p") %></td>
    <td>
       <a href="<%= reserva_path(reserva) %>" class="btn btn-white btn-sm"><i class="fa fa-edit"></i> Reserva</a>
       <a href="<%= cliente_path(reserva.cliente) %>" class="btn btn-white btn-sm"><i class="fa fa-user-o"></i> Usuario</a>
       <a href="<%= cancha_path(reserva.cancha) %>" class="btn btn-white btn-sm"><i class="fa fa-futbol-o"></i> Cancha</a>
    </td>
</tr>