<div class="wrapper wrapper-content animated fadeInUp">
  <div class="row">
      <div class="col-lg-12">
          <div class="ibox">
              <div class="ibox-content">
                  <div class="row">
                      <div class="col-lg-8">
                          <div class="m-b-md">
                              <h2>Informacion detallada sobre la Reserva N°<%= @reserva.id %></h2>
                          </div>
                      </div>
                      <div class="col-lg-4">
                          <div class="text-right">
                              <div class="btn-group">
                                  <%= link_to '<i class="fa fa-mail-reply"></i> Regresar'.html_safe, :back, class: 'btn btn-white btn-sm' %>
                                  <a href="<%= edit_reserva_path(@reserva) %>" class="btn btn-white btn-xs float-right"><i class="fa fa-pencil-square-o"></i> Editar reserva</a>
                              </div>
                          </div>
                      </div>
                  </div>
                  <div class="row">
                      <div class="col-lg-6">
                          <dl class="row mb-0">
                              <div class="col-sm-4 text-sm-right">
                                  <dt>Codigo:</dt>
                              </div>
                              <div class="col-sm-8 text-sm-left">
                                  <dd class="mb-1"><%=@reserva.id%></dd>
                              </div>
                          </dl>
                          <dl class="row mb-0">
                              <div class="col-sm-4 text-sm-right">
                                  <dt>Fecha:</dt>
                              </div>
                              <div class="col-sm-8 text-sm-left">
                                  <dd class="mb-1"><%= @reserva.fecha.strftime("%b %e %Y") %></dd>
                              </div>
                          </dl>
                          <dl class="row mb-0">
                              <div class="col-sm-4 text-sm-right">
                                  <dt>Hora de inicio:</dt>
                              </div>
                              <div class="col-sm-8 text-sm-left">
                                  <dd class="mb-1"><%= @reserva.hora_inicio.strftime("%I:%M %p") %></dd>
                              </div>
                          </dl>
                          <dl class="row mb-0">
                              <div class="col-sm-4 text-sm-right">
                                  <dt>Hora de finalización:</dt>
                              </div>
                              <div class="col-sm-8 text-sm-left">
                                  <dd class="mb-1"><%= @reserva.hora_fin.strftime("%I:%M %p") %></dd>
                              </div>
                          </dl>
                          <dl class="row mb-0">
                              <div class="col-sm-4 text-sm-right">
                                  <dt>Precio:</dt>
                              </div>
                              <div class="col-sm-8 text-sm-left">
                                  <dd class="mb-1">$<%= @reserva.precio.to_i %></dd>
                              </div>
                          </dl>
                      </div>
                      <div class="col-lg-6" id="cluster_info">
                          <dl class="row mb-0">
                              <div class="col-sm-5 text-sm-right">
                                  <dt>Identificación del usuario:</dt>
                              </div>
                              <div class="col-sm-7 text-sm-left">
                                  <dd class="mb-1"><a href="<%= user_profile_path %>" class="text-navy"><%=@reserva.usuario.identificacion%></a></dd>
                              </div>
                          </dl>
                          <dl class="row mb-0">
                              <div class="col-sm-5 text-sm-right">
                                  <dt>Nombre de la cancha:</dt>
                              </div>
                              <div class="col-sm-7 text-sm-left">
                                  <dd class="mb-1"><a href="<%= cancha_path(@reserva.cancha) %>" class="text-navy"><%=@reserva.cancha.nombre%></a></dd>
                              </div>
                          </dl>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>



