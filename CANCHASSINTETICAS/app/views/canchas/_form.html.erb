<div class= "form-container">
  <div class= "form-container2">
    <h2 style="text-align: center;"><%= @titulo %></h2>
    <%= simple_form_for @cancha do |f| %>
      <div class="form-group row">
          <%= f.label :nombre, "Nombre" %>
          <%= f.text_field :nombre, class: "form-control" %>
      </div>
      <div class="form-group row">
          <%= f.label :jugadores, "Jugadores" %>
          <%= f.text_field :jugadores, class: "form-control" %>
      </div>
      <div class="form-group row">
          <%= f.label :distancia, "Distancia" %>
          <%= f.text_field :distancia, class: "form-control" %>
      </div>
      <div class="form-group row">
          <%= f.label :precio, "Precio" %>
          <%= f.text_field :precio, class: "form-control" %>
      </div>
      <div class="form-group">
          <%= f.submit "Enviar", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
